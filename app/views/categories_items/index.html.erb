<h1><%= @category.name %></h1>
<% if admin? %>
  <strong>Add an Item to this Category</strong>
  <%= form_for [@category, CategoriesItem.new] do |form| %>
    <div class='form-group'>
      <%= form.collection_select :item_id, Item.all, :id, :title, {}, {class: 'form-control'} %>
    </div>
    <%= submit_tag 'Add item', class: 'btn btn-primary' %>
  <% end %>
<% end %>
<% if @categories_items.empty? %>
  <p>No items in this category</p>
<% else %>
  <div class='row'>
    <%= render @categories_items %>
  </div>
<% end %>
