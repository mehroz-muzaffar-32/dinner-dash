<div class="card">
  <div class="card-body">
    <h3 class="card-title"><%= restaurant.name %></h3>
    <p><%= pluralize(restaurant.items.length, 'item')%></p>
    <% if enable_show %>
      <%= link_to 'Show', restaurant_path(restaurant), class:"btn btn-primary" %>
    <% end %>
    <% if user_signed_in? && current_user.admin? %>
      <%= link_to 'Edit', edit_restaurant_path(restaurant), class: 'btn btn-outline-dark' %>
      <%= link_to 'Destroy', restaurant, method: :delete, class:'btn btn-outline-danger' %>
    <% end %>
  </div>
</div>
<% unless enable_show %>
  <h4>Items Available in this Restaurant</h4>
  <%= link_to 'Add Item', new_restaurant_item_path(restaurant), class: 'btn btn-success' %>
  <%= link_to 'Back', restaurants_path, class: 'btn btn-dark' %>
  <%= render 'items/list', items: restaurant.items %>
<% end %>
